package org.asd.kyros.ui.swt;

import org.eclipse.scout.rt.ui.swt.ISwtEnvironment;
import org.asd.kyros.client.ClientSession;
import org.asd.kyros.ui.swt.perspective.Perspective;
import org.asd.kyros.ui.swt.views.CenterView;
import org.asd.kyros.ui.swt.views.DetailView;
import org.asd.kyros.ui.swt.views.EastView;
import org.asd.kyros.ui.swt.views.OutlineView;
import org.asd.kyros.ui.swt.views.SearchView;
import org.asd.kyros.ui.swt.views.TableView;
import org.osgi.framework.BundleActivator;
import org.osgi.framework.BundleContext;

public class Activator implements BundleActivator{

  // the plugin id
  public static final String BUNDLE_ID = "org.asd.kyros.ui.swt";

  private ISwtEnvironment m_environment;

  // the shared instance
  private static Activator m_bundle;

  @Override
  public void start(BundleContext context) throws Exception {
    m_bundle = this;
    m_environment = new SwtEnvironment(context.getBundle(), Perspective.ID, ClientSession.class);
  }

  @Override
  public void stop(BundleContext context) throws Exception {
    m_bundle = null;
  }

  public static Activator getDefault() {
    return m_bundle;
  }

  public ISwtEnvironment getEnvironment() {
    return m_environment;
  }
}

